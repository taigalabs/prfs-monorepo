{
  "include": ["./src/**/*", "./src/**/*.wasm"],
  "exclude": ["./jest.config.js", "./node_modules", "./tests", "./build"],
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "declaration": true,
    "target": "es2020",
    "module": "es2020",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
