{
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./build"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
