{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./build"
  ],
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": false,
    "target": "es2022",
    "rootDir": "./src",
    "allowJs": true,
    "outDir": "./build",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
