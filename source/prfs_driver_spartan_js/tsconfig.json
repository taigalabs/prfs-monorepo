{
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "declaration": true,
    "target": "es2022",
    "module": "esnext",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*", "./src/**/*.wasm", "./src/**/package.json"],
  "exclude": ["./jest.config.js", "./node_modules", "./tests", "./dist"]
}
